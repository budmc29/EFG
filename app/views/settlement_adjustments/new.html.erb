<%= breadcrumbs_for_loan(@loan) %>

<div class="page-header">
  <h1>Settlement Adjustment</h1>
</div>

<%= simple_form_for(@settlement_adjustment, html: { class: 'form-horizontal' }) do |f| %>
  <%= simple_form_row "Current settled amount", f.object.settled_amount.format %>

  <%= f.input :amount, as: :currency %>
  <%= f.input :date, as: :quick_date %>
  <%= f.input :notes, as: :text, input_html: {rows: 5} %>

  <div class="form-actions">
    <%= f.button(:submit, value: 'Submit', class: 'btn-primary', data: { 'disable-with' => 'Submitting...' }) %>
  </div>
<% end %>
