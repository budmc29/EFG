<%= breadcrumbs %>

<div class="page-header">
  <%= loan_alerts_priority(@alerting_loans.priority) %>
  <h1><%= params[:id].titleize %> Loan Alerts (<%= pluralize(@alerting_loans.loans.count, 'loan') %>)</h1>
</div>

<p><%= t("loan_alerts.#{params[:id]}_description") %></p>

<%= other_alert_links(@alerting_loans.priority) %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Days Remaining</th>
      <th>Reference</th>
      <th>Business name</th>
      <th>Amount</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <% @alerting_loans.each do |loan| %>
      <tr>
        <td><%= loan.days_remaining %></td>
        <td><%= link_to(loan.reference, loan) %></td>
        <td><%= link_to(loan_business_name(loan), loan) %></td>
        <td><%= loan.amount.format %></td>
        <td><%= loan.updated_at.strftime("%d %B %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @alerting_loans.count > 5 %>
  <%= other_alert_links(@alerting_loans.priority) %>
<% end %>
